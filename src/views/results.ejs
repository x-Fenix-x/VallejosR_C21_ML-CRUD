<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner"></div>
			<!-- /Banner -->

			<!-- todos los productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Resultados de la búsqueda: <%= keywords %>
						</h2>
					</div>
					<% if (results.length) { %>
						<% results.forEach(result=> { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<%- include('partials/productCard',{ ...result, toThousand }) %>
							</div>
							<% }) %>
								<% }else{ %>
									<div class="col-12">
										<h2 class="products-title products-title__results">No hay productos que
											coincidan
											con esa búsqueda</h2>
									</div>
									<% } %>
				</div>
			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Ofertas' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner"></div>
			<!-- /Banner -->

			<!-- Ofertas -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Ofertas</h2>
					</div>
					<!-- Show the "in-sale" products -->
					<% productsInSale.forEach(product=> { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<%- include('partials/productCard',{ ...product, toThousand }) %>
						</div>
						<% }) %>
				</div>
			</div>
			<!-- /Ofertas -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>